@model RabApiWithMvc.Models.Supplier

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">

        <div class="col-md-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>صفة اضافة بيانات موزع جديد</h2>

                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form class="form-horizontal form-label-right">
                        <div class="form-horizontal">
                            <h4>Supplier</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.SuppId)

                            <div class="form-group">
                                <div class="control-label col-lg-2 col-md-2 col-xs-2"> اسم الموزع </div>
                                <div class="col-lg-4">
                                    @Html.EditorFor(model => model.SuppName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SuppName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            @*<div class="form-group">
                                <div class="control-label col-lg-2 col-md-2 col-xs-2"> xxx </div>
                                <div class="col-lg-4">
                                    @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                </div>
                            </div>*@

                            <div class="form-group">
                                <div class="control-label col-lg-2 col-md-2 col-xs-2"> العنوان كامل </div>
                                <div class="col-lg-4">
                                    @Html.EditorFor(model => model.fullAddress, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.fullAddress, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-lg-2 col-md-2 col-xs-2"> اسم المسؤول </div>
                                <div class="col-lg-4">
                                    @Html.EditorFor(model => model.OwnerName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.OwnerName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-lg-2 col-md-2 col-xs-2"> رقم الهاتف </div>
                                <div class="col-lg-4">
                                    @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PhoneNo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-lg-2 col-md-2 col-xs-2"> المنطقة </div>
                                <div class="col-lg-4">
                                    @Html.DropDownList("AreaId", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.AreaId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-lg-4">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-9 col-lg-9 col-xs-12 col-md-offset-3">
                                <button type="submit" class="btn btn-primary">Cancel</button>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

}

