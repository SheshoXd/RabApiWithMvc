@model IEnumerable<RabApiWithMvc.Models.SaleOrder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row ">

    <div class="col-lg-12">
        <div class="panel panel-default col-lg-pull-8">
            <div class="panel-heading">
                اوامر البيع
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body" ng-controller="soLandController">
                <table class="table table-striped table-bordered table-hover col-lg-pull-8" id="dataTables-example">
                    <thead>
                        <tr>
                            <th class="right center col-sm-1" dir="rtl">رقم</th>
                            <th class="col-sm-2">تاريخ</th>
                            <th class="col-sm-3">اسم العميل</th>
                            <th class="col-sm-2">اجمالى السعر</th>
                            <th class="col-sm-2">المدفوع</th>
                            <th class="col-sm-2">الباقى</th>
                            <th class="col-sm-2">القديم</th>
                            <th class="col-sm-2">الترحيل</th>
                            <th class="col-sm-2">اضافه للطباعه</th>
                            <th class="col-sm-1">عرض</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="d in AllSealOrder">

                        <tr>

                            <td> {{d.SlOrdId}}</td>
                            <td> {{d.SlOrdDate}}</td>
                            <td class="center"> {{d.Client.ClntName}} </td>
                            <td class="center">  {{d.TotalPrice}} </td>

                            <td class="center">
                                {{d.Creditor}}
                            </td>
                            <td class="center">
                                {{d.Debit}}
                            </td>
                            <td class="center">
                                {{d.Debit}}
                            </td>
                            <td class="center">

                                <button type="button" ng-click="postso(d.SlOrdId)" ng-disabled="{{d.PostingStats}}" class="btn btn-danger"> <i class="fa fa-calculator"></i></button>
                            </td>
                            <td class="center">

                                <button type="button" ng-click="postso(d.SlOrdId)" ng-disabled="!{{d.PostingStats}}" class="btn btn-primary"><i class="fa fa-print"></i> </button>
                            </td>
                            <td class="col-sm-1"><a href="~/ASaleOrders/edit/{{d.SlOrdId}}"><span class="glyphicon glyphicon-log-in"></span></a></td>
                        </tr>

                        <!--<tr class="even gradeC">
                            <td>Trident</td>

                            <td class="center">5</td>
                            <td class="center">C</td>
                        </tr>-->

                    </tbody>
                    <tfoot>

                    </tfoot>
                </table>
                <!-- /.table-responsive -->
            </div>
        </div>
        <!-- /.panel-body -->
    </div>

</div>